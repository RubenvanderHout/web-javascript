{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2022", // or any other target you are using
    "module": "ES2022", // or your preferred module system
    "moduleResolution": "Bundler",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "allowJs": true, // allow JavaScript files to be included
    "checkJs": true // check JavaScript files for errors
  },
  "include": ["src/**/*", "global.d.ts"], // adjust the path according to your project structure
  "exclude": ["node_modules", "**/*.spec.ts"]
}
  